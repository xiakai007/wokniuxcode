<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.isoftstone.humanresources.dao.DepartmentNewsDao">
	<!-- 返回值映射map -->
	<resultMap id="departmentNewsMapper" type="com.isoftstone.humanresources.domain.gather.DepartmentNewsModel">
		<result property="id" column="id" />
		<result property="subject" column="subject" />
		<result property="content" column="content" />
		<result property="createbody" column="createbody" />
		<result property="createName" column="createName" />
		<result property="imgs" column="imgs" />
		<result property="status" column="status" />
		<result property="createtime" column="createtime" />
		<result property="updatetime" column="updatetime" />
		<result property="bak" column="bak" />
	</resultMap>
	
	<!-- 查询数量公共sql -->
	<sql id="count_Tail">
		select count(1) from t_department_news record
	</sql>
	
	<!-- 分页公共sql -->
	<sql id="pagination_tail">
	  limit #{page.pageOffset} , #{page.pageSize}
	</sql>

	<!-- 查询字段公共sql -->
	<sql id="selectAllColumns">
	    SELECT 
	    <if test="queryFields != null ">
	 	     <trim prefix="" suffix="" suffixOverrides=",">
		        <foreach collection="queryFields" item="fi" index="index">
		          ${fi},
		        </foreach>
		      </trim> 	
	  	</if>
	    <if test="queryFields == null ">
	  		<![CDATA[
				 id, 
				 subject, 
				 content, 
				 createbody, 
				 imgs, 
				 status, 
				 createtime, 
				 updatetime, 
				 bak 
			]]>
	  	</if>
	     FROM t_department_news record
	</sql>
	
	<sql id="where_fragement">
		<where> 
			<if test="entity!=null">
					<if test = "entity.id != null and entity.id != ''">
						<![CDATA[ and record.id  = #{entity.id} ]]>
					</if>
					<if test = "entity.subject != null and entity.subject != ''">
						<![CDATA[ and record.subject  = #{entity.subject} ]]>
					</if>
					<if test = "entity.content != null and entity.content != ''">
						<![CDATA[ and record.content  = #{entity.content} ]]>
					</if>
					<if test = "entity.createbody != null and entity.createbody != ''">
						<![CDATA[ and record.createbody  = #{entity.createbody} ]]>
					</if>
					<if test = "entity.imgs != null and entity.imgs != ''">
						<![CDATA[ and record.imgs  = #{entity.imgs} ]]>
					</if>
					<if test = "entity.status != null and entity.status != ''">
						<![CDATA[ and record.status  = #{entity.status} ]]>
					</if>
					<if test = "entity.createtime != null and entity.createtime != ''">
						<![CDATA[ and record.createtime  = #{entity.createtime} ]]>
					</if>
					<if test = "entity.updatetime != null and entity.updatetime != ''">
						<![CDATA[ and record.updatetime  = #{entity.updatetime} ]]>
					</if>
					<if test = "entity.bak != null and entity.bak != ''">
						<![CDATA[ and record.bak  = #{entity.bak} ]]>
					</if>
			</if>
		</where>
	</sql>
	
	<sql id="time_sort">
		order by id desc
	</sql>

	<!-- 分页查询数据集合-->
	<select id="queryPageDepartmentNews" resultMap="departmentNewsMapper" >
		<include refid="selectAllColumns"/>
		<include refid="where_fragement" />
		<include refid="time_sort" />
		<if test="page!=null">
			<include refid="pagination_tail" />
		</if>
		
	</select>
	
	<!-- 不分页查询数据集合-->
	<select id="queryListDepartmentNews" resultMap="departmentNewsMapper" >
	select record.id,
		record.subject,
		record.content,
		record.createbody,
		te.employeeName as createName ,
		record.imgs,
		record.status,
		record.createtime,
		record.updatetime,
		record.bak
		FROM t_department_news record
		left join t_employee te on te.employeeID = record.createbody
		<include refid="where_fragement" />
		<include refid="time_sort" />
	</select>
	
	<!-- 查询总数量 -->
	<select id="queryCountDepartmentNews" resultType="long">
		<include refid="count_Tail"></include>
		<include refid="where_fragement"></include>
	</select>

	<!-- 查询单个实体 -->
	<select id="queryDepartmentNewsById" resultMap="departmentNewsMapper" >
		select record.id,
		record.subject,
		record.content,
		record.createbody,
		te.employeeName as createName ,
		record.imgs,
		record.status,
		record.createtime,
		record.updatetime,
		record.bak
		FROM t_department_news record
		left join t_employee te on te.employeeID = record.createbody
		 where 
		 record.id = #{id}
	</select>
	
	<!-- 新增列处理 -->
	<sql id="sql_add_columns">
		<trim suffixOverrides=",">
			<if test="id != null">id,</if>
			<if test="subject != null">subject,</if>
			<if test="content != null">content,</if>
			<if test="createbody != null">createbody,</if>
			<if test="imgs != null">imgs,</if>
			<if test="status != null">status,</if>
			<if test="createtime != null">createtime,</if>
			<if test="updatetime != null">updatetime,</if>
			<if test="bak != null">bak,</if>
		</trim>
	</sql>

	<sql id="sql_add_properties">
		<trim suffixOverrides=",">
			<if test="id != null">#{id},</if>
			<if test="subject != null">#{subject},</if>
			<if test="content != null">#{content},</if>
			<if test="createbody != null">#{createbody},</if>
			<if test="imgs != null">#{imgs},</if>
			<if test="status != null">#{status},</if>
			<if test="createtime != null">#{createtime},</if>
			<if test="updatetime != null">#{updatetime},</if>
			<if test="bak != null">#{bak},</if>
		</trim>		
	</sql>
	
	<!-- 新增 -->
	<insert id="addDepartmentNews" parameterType="com.isoftstone.humanresources.domain.gather.DepartmentNewsModel">
		insert into t_department_news(
			<include refid="sql_add_columns"/>
		)values(
			<include refid="sql_add_properties"/>
		)
	</insert>

	<!-- 编辑 -->
	<update id="updateDepartmentNews" parameterType="com.isoftstone.humanresources.domain.gather.DepartmentNewsModel">
		update t_department_news record 
			<set>
					<if test = "subject != null ">
						record.subject = #{subject},
					</if>
					<if test = "content != null ">
						record.content = #{content},
					</if>
					<if test = "createbody != null ">
						record.createbody = #{createbody},
					</if>
					<if test = "imgs != null ">
						record.imgs = #{imgs},
					</if>
					<if test = "status != null ">
						record.status = #{status},
					</if>
					<if test = "createtime != null ">
						record.createtime = #{createtime},
					</if>
					<if test = "updatetime != null ">
						record.updatetime = #{updatetime},
					</if>
					<if test = "bak != null ">
						record.bak = #{bak}
					</if>
			</set>
		where id = #{id}
	</update>
	
	<!-- 删除 -->
	<delete id="removeDepartmentNewsByIds" parameterType="java.util.List">
		delete from t_department_news 
			where id in
			<foreach collection="list" open="(" separator="," close=")" item="code">
				#{code}
			</foreach>
	</delete>

	<delete id="removeDepartmentNewsById">
		delete from t_department_news 
		<if test=" id != null and id != ''">
			where id = #{id}
		</if>
	</delete>
	
</mapper>
