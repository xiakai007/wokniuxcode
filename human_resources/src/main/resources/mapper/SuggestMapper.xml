<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.isoftstone.humanresources.dao.SuggestDao">
	<!-- 返回值映射map -->
	<resultMap id="suggestMapper" type="com.isoftstone.humanresources.domain.Suggest">
			<result property="id" column="id" />
			<result property="employeeid" column="employeeID" />
			<result property="employeename" column="employeeName" />
			<result property="workage" column="workage" />
			<result property="used" column="used" />
			<result property="productname" column="productName" />
			<result property="productsuggest" column="productSuggest" />
			<result property="productintroduce" column="productintroduce" />
			<result property="newway" column="newWay" />
			<result property="newgroup" column="newGroup" />
			<result property="newskill" column="newSkill" />
			<result property="introduce" column="introduce" />
			<result property="relation" column="relation" />
			<result property="needrelation" column="needRelation" />
			<result property="idea" column="idea" />
			<result property="vista" column="vista" />
			<result property="suggest" column="suggest" />
			<result property="imgs" column="imgs" />
			<result property="status" column="status" />
			<result property="createtime" column="createtime" />
			<result property="updatetime" column="updatetime" />
			<result property="bak" column="bak" />
	</resultMap>
	
	<!-- 查询数量公共sql -->
	<sql id="count_Tail">
		select count(1) from t_suggest record
	</sql>
	
	<!-- 分页公共sql -->
	<sql id="pagination_tail">
	  limit #{page.pageOffset} , #{page.pageSize}
	</sql>

	<!-- 查询字段公共sql -->
	<sql id="selectAllColumns">
	    SELECT 
	    <if test="queryFields != null ">
	 	     <trim prefix="" suffix="" suffixOverrides=",">
		        <foreach collection="queryFields" item="fi" index="index">
		          ${fi},
		        </foreach>
		      </trim> 	
	  	</if>
	    <if test="queryFields == null ">
	  		<![CDATA[
				 id, 
				 employeeID, 
				 employeeName, 
				 workage, 
				 used,
				 productName, 
				 productSuggest,
				 productintroduce,
				 newWay, 
				 newGroup, 
				 newSkill, 
				 introduce, 
				 relation, 
				 needRelation, 
				 idea, 
				 vista, 
				 suggest, 
				 imgs, 
				 status, 
				 createtime, 
				 updatetime, 
				 bak 
			]]>
	  	</if>
	     FROM t_suggest record
	</sql>
	
	<sql id="where_fragement">
		<where> 
			<if test="entity!=null">
					<if test = "entity.id != null and entity.id != ''">
						<![CDATA[ and record.id  = #{entity.id} ]]>
					</if>
					<if test = "entity.employeeid != null and entity.employeeid != ''">
						<![CDATA[ and record.employeeID  = #{entity.employeeid} ]]>
					</if>
					<if test = "entity.employeename != null and entity.employeename != ''">
						<![CDATA[ and record.employeeName  = #{entity.employeename} ]]>
					</if>
					<if test = "entity.workage != null and entity.workage != ''">
						<![CDATA[ and record.workage  = #{entity.workage} ]]>
					</if>
					<if test = "entity.used != null and entity.used != ''">
						<![CDATA[ and record.used  = #{entity.used} ]]>
					</if>
					<if test = "entity.productname != null and entity.productname != ''">
						<![CDATA[ and record.productName  = #{entity.productname} ]]>
					</if>
					<if test = "entity.productintroduce != null and entity.productintroduce != ''">
						<![CDATA[ and record.productintroduce  = #{entity.productintroduce} ]]>
					</if>
					<if test = "entity.productsuggest != null and entity.productsuggest != ''">
						<![CDATA[ and record.productSuggest  = #{entity.productsuggest} ]]>
					</if>
					<if test = "entity.newway != null and entity.newway != ''">
						<![CDATA[ and record.newWay  = #{entity.newway} ]]>
					</if>
					<if test = "entity.newgroup != null and entity.newgroup != ''">
						<![CDATA[ and record.newGroup  = #{entity.newgroup} ]]>
					</if>
					<if test = "entity.newskill != null and entity.newskill != ''">
						<![CDATA[ and record.newSkill  = #{entity.newskill} ]]>
					</if>
					<if test = "entity.introduce != null and entity.introduce != ''">
						<![CDATA[ and record.introduce  = #{entity.introduce} ]]>
					</if>
					<if test = "entity.relation != null and entity.relation != ''">
						<![CDATA[ and record.relation  = #{entity.relation} ]]>
					</if>
					<if test = "entity.needrelation != null and entity.needrelation != ''">
						<![CDATA[ and record.needRelation  = #{entity.needrelation} ]]>
					</if>
					<if test = "entity.idea != null and entity.idea != ''">
						<![CDATA[ and record.idea  = #{entity.idea} ]]>
					</if>
					<if test = "entity.vista != null and entity.vista != ''">
						<![CDATA[ and record.vista  = #{entity.vista} ]]>
					</if>
					<if test = "entity.suggest != null and entity.suggest != ''">
						<![CDATA[ and record.suggest  = #{entity.suggest} ]]>
					</if>
					<if test = "entity.imgs != null and entity.imgs != ''">
						<![CDATA[ and record.imgs  = #{entity.imgs} ]]>
					</if>
					<if test = "entity.status != null and entity.status != ''">
						<![CDATA[ and record.status  = #{entity.status} ]]>
					</if>
					<if test = "entity.createtime != null and entity.createtime != ''">
						<![CDATA[ and record.createtime  = #{entity.createtime} ]]>
					</if>
					<if test = "entity.updatetime != null and entity.updatetime != ''">
						<![CDATA[ and record.updatetime  = #{entity.updatetime} ]]>
					</if>
					<if test = "entity.bak != null and entity.bak != ''">
						<![CDATA[ and record.bak  = #{entity.bak} ]]>
					</if>
			</if>
		</where>
	</sql>
	
	<sql id="time_sort">
		order by id desc
	</sql>

	<!-- 分页查询数据集合-->
	<select id="queryPageSuggest" resultMap="suggestMapper" >
		<include refid="selectAllColumns"/>
		<include refid="where_fragement" />
		<include refid="time_sort" />
		<if test="page!=null">
			<include refid="pagination_tail" />
		</if>
		
	</select>
	
	<!-- 不分页查询数据集合-->
	<select id="queryListSuggest" resultMap="suggestMapper" >
		<include refid="selectAllColumns"/>
		<include refid="where_fragement" />
		<include refid="time_sort" />
	</select>
	
	<!-- 查询总数量 -->
	<select id="queryCountSuggest" resultType="long">
		<include refid="count_Tail"></include>
		<include refid="where_fragement"></include>
	</select>

	<!-- 查询单个实体 -->
	<select id="querySuggestById" resultMap="suggestMapper" >
		<include refid="selectAllColumns"/>
		 where 
		 record.id = #{id}
	</select>
	
	<!-- 新增列处理 -->
	<sql id="sql_add_columns">
		<trim suffixOverrides=",">
			<if test="id != null">id,</if>
			<if test="employeeid != null">employeeID,</if>
			<if test="employeename != null">employeeName,</if>
			<if test="workage != null">workage,</if>
			<if test="used != null">used,</if>
			<if test="productname != null">productName,</if>
			<if test="productsuggest != null">productSuggest,</if>
			<if test="productintroduce != null">productintroduce,</if>
			<if test="newway != null">newWay,</if>
			<if test="newgroup != null">newGroup,</if>
			<if test="newskill != null">newSkill,</if>
			<if test="introduce != null">introduce,</if>
			<if test="relation != null">relation,</if>
			<if test="needrelation != null">needRelation,</if>
			<if test="idea != null">idea,</if>
			<if test="vista != null">vista,</if>
			<if test="suggest != null">suggest,</if>
			<if test="imgs != null">imgs,</if>
			<if test="status != null">status,</if>
			<if test="createtime != null">createtime,</if>
			<if test="updatetime != null">updatetime,</if>
			<if test="bak != null">bak,</if>
		</trim>
	</sql>

	<sql id="sql_add_properties">
		<trim suffixOverrides=",">
				<if test="id != null">#{id},</if>
				<if test="employeeid != null">#{employeeid},</if>
				<if test="employeename != null">#{employeename},</if>
				<if test="workage != null">#{workage},</if>
				<if test="used != null">#{used},</if>
				<if test="productname != null">#{productname},</if>
				<if test="productsuggest != null">#{productsuggest},</if>
				<if test="productintroduce != null">#{productintroduce},</if>
				<if test="newway != null">#{newway},</if>
				<if test="newgroup != null">#{newgroup},</if>
				<if test="newskill != null">#{newskill},</if>
				<if test="introduce != null">#{introduce},</if>
				<if test="relation != null">#{relation},</if>
				<if test="needrelation != null">#{needrelation},</if>
				<if test="idea != null">#{idea},</if>
				<if test="vista != null">#{vista},</if>
				<if test="suggest != null">#{suggest},</if>
				<if test="imgs != null">#{imgs},</if>
				<if test="status != null">#{status},</if>
				<if test="createtime != null">#{createtime},</if>
				<if test="updatetime != null">#{updatetime},</if>
				<if test="bak != null">#{bak},</if>
		</trim>		
	</sql>
	
	<!-- 新增 -->
	<insert id="addSuggest" parameterType="com.isoftstone.humanresources.domain.Suggest">
		insert into t_suggest(
			<include refid="sql_add_columns"/>
		)values(
			<include refid="sql_add_properties"/>
		)
	</insert>

	<!-- 编辑 -->
	<update id="updateSuggest" parameterType="com.isoftstone.humanresources.domain.Suggest">
		update t_suggest record 
			<set>
					<if test = "employeeid != null ">
						record.employeeID = #{employeeid},
					</if>
					<if test = "employeename != null ">
						record.employeeName = #{employeename},
					</if>
					<if test = "workage != null ">
						record.workage = #{workage},
					</if>
					<if test = "used != null ">
						record.used = #{used},
					</if>
					<if test = "productname != null ">
						record.productName = #{productname},
					</if>
					<if test = "productsuggest != null ">
						record.productSuggest = #{productsuggest},
					</if>
					<if test = "productintroduce != null ">
						record.productintroduce = #{productintroduce},
					</if>
					<if test = "newway != null ">
						record.newWay = #{newway},
					</if>
					<if test = "newgroup != null ">
						record.newGroup = #{newgroup},
					</if>
					<if test = "newskill != null ">
						record.newSkill = #{newskill},
					</if>
					<if test = "introduce != null ">
						record.introduce = #{introduce},
					</if>
					<if test = "relation != null ">
						record.relation = #{relation},
					</if>
					<if test = "needrelation != null ">
						record.needRelation = #{needrelation},
					</if>
					<if test = "idea != null ">
						record.idea = #{idea},
					</if>
					<if test = "vista != null ">
						record.vista = #{vista},
					</if>
					<if test = "suggest != null ">
						record.suggest = #{suggest},
					</if>
					<if test = "imgs != null ">
						record.imgs = #{imgs},
					</if>
					<if test = "status != null ">
						record.status = #{status},
					</if>
					<if test = "createtime != null ">
						record.createtime = #{createtime},
					</if>
					<if test = "updatetime != null ">
						record.updatetime = #{updatetime},
					</if>
					<if test = "bak != null ">
						record.bak = #{bak}
					</if>
			</set>
		where id = #{id}
	</update>
	
	<!-- 删除 -->
	<delete id="removeSuggestByIds" parameterType="java.util.List">
		delete from t_suggest 
			where id in
			<foreach collection="list" open="(" separator="," close=")" item="code">
				#{code}
			</foreach>
	</delete>

	<delete id="removeSuggestById">
		delete from t_suggest 
		<if test=" id != null and id != ''">
			where id = #{id}
		</if>
	</delete>
	
</mapper>
